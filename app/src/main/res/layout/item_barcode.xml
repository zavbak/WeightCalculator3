<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView
            android:id="@+id/tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="id"/>

        <TextView
            android:id="@+id/tv_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="initBarcode"
            android:layout_below="@+id/tv_id"/>

        <TextView
            android:id="@+id/tv_titl_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Вес: "
            android:layout_below="@+id/tv_barcode"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="weight"
            android:layout_below="@+id/tv_barcode"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/tv_titl_weight"

            />


        <TextView
            android:id="@+id/tv_titl_pleces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="42dp"
            android:text="Мест: "
            android:layout_below="@+id/tv_barcode"
            android:layout_toRightOf="@+id/tv_weight"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/tv_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="sites"
            android:layout_below="@+id/tv_barcode"
            android:layout_toRightOf="@+id/tv_titl_pleces"
            android:textSize="18dp"
            />









    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>